<h1 class="display-6">Login Panel</h1>
<h4 ><%= flash[:notice] %></h4>
<%= form_with do |form|%>
    <div class="form-section">
    <div class="form_field-container">
        <div class="form-floating mb-3">
            <%= form.text_field :username, class: "form-control", id: "floatingInput", placeholder: "username"%>
            <%= form.label :username, for: "floatingInput" %>
        </div>

        <div class="form-floating mb-3">
            <%= form.text_field :password , class: "form-control", id: "floatingInput", placeholder: "password"%>
            <%= form.label :password, for: "floatingInput" %>
        </div>

        <div class="actions">
            <%= form.submit  "Login"%>
        </div>
    </div>
<%end%>